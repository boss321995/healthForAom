# Environment Variables for Render Deployment
# ตัวแปรสำหรับการ deploy บน Render

# Production Environment
NODE_ENV=production

# Server Configuration
PORT=10000

# Database Configuration (Replace with your actual Render PostgreSQL or MySQL details)
DB_HOST=your-database-host
DB_USER=your-database-user
DB_PASSWORD=your-database-password
DB_NAME=your-database-name
DB_SSL=true

# JWT Secret (Generate a strong secret for production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Render Service URL (Will be provided by Render)
RENDER_SERVICE_URL=https://your-app-name.onrender.com

# Keep-Alive Configuration
ENABLE_KEEP_ALIVE=true
KEEP_ALIVE_INTERVAL=600000

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.com

# API Configuration
API_TIMEOUT=30000
MAX_RETRIES=3

# Health Check Configuration
HEALTH_CHECK_ENABLED=true

# Logging Configuration
LOG_LEVEL=info

# Example of how to set these in Render Dashboard:
# 1. Go to your service dashboard
# 2. Click on "Environment" tab
# 3. Add each variable above with your actual values
# 4. Don't include quotes around the values in Render
